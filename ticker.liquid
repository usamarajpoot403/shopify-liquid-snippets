<style>

  

.ticker-wrap {
  width: 100%;
  height: 80px;
  margin: 0 auto;
  overflow: hidden;
  white-space: nowrap;
  height: 3.5rem;
}
.ticker {
  display: inline-block;
  margin-top: 5px;
  animation: marquee 20s linear infinite;
}
.item-collection-1 {
  position: relative;
  left: 0%;
  animation: swap 20s linear infinite;
}

.item-ticker {
  display: inline-block;
  padding: 0 2rem;
  font-size: 15px;
  color: #fff;
  font-weight: 500;
  font-family: 'Open Sans';
}

/* Transition */
@keyframes marquee {
  0% {
    transform: translateX(0)
  }
  100% {
    transform: translateX(-100%)
  }
}

@keyframes swap {
  0%, 50% {
    left: 0%;
  }
  50.01%,
  100% {
    left: 100%;
  }
}

  </style>
<div class="ticker-wrap">
  <div class="ticker">
    <span class="item-collection-1">
      {%- for block in section.blocks -%}
        <span class="item-ticker"> {{ block.settings.text }}</span>
      {%- endfor -%}
    </span>
    <span class="item-collection-2">
      {%- for block in section.blocks -%}
        <span class="item-ticker"> {{ block.settings.text }}</span>
      {%- endfor -%}
    </span>
  </div>



      
</div>