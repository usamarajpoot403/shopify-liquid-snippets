<style>
    .img-with-icons-box .flex {
      gap: 80px;
          align-items: start;
  }


    .img-with-icons-box {
        background: #FBF1FF;

    }

        .icons-wrapper svg {
            height: 60px;
            border: 1px solid;
            border-radius: 50%;
        }

.icon-wrapper img.icon {
    height: 55px;
    object-fit: contain;
}

      .icon_box h3.h2 {
          margin: 9px auto;
      }

      .icons-wrapper {
          display: grid;
          grid-template-columns: 50% 50%;
          gap: 20px;
          width: 100%;
        margin-top: 50px;
      }


      .img-with-icons-box img.image {
          width: 100%;
          object-fit: cover;
      }
</style>
<div class="img-with-icons-box py-70">
<div class="page-width flex">
  <div class="col">
    <h2 class="h0">{{ section.settings.heading }}</h2>
    <div class="icons-wrapper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'icon_box' -%}
            <div class="icon_box">
              <div class="icon-wrapper">
                {%- # Label: Icon Image -%}
                {%- assign icon_image = block.settings.icon_image -%}

                {%- if block.settings.icon_image -%}
                  {{ icon_image | image_url: width: icon_image.width | image_tag: class: 'icon', loading: 'lazy' }}
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag }}
                {%- endif -%}
              </div>
              <h3 class="h2">
                {%- # Label: Subtitle -%}
                {{ block.settings.subtitle }}
              </h3>

              <div class="body">
                {%- # Label: Content -%}
                {{ block.settings.content }}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
  <div class="col">
    {%- # Label: Image -%}

    {%- if section.settings.image -%}
      {%- assign image = section.settings.image -%}
      {{ image | image_url: width: image.width | image_tag: class: 'image', loading: 'lazy' }}
    {%- else -%}
      {{ 'image' | placeholder_svg_tag }}
    {%- endif -%}
  </div>
</div>
</div>

{% schema %}
{
"name": "Image With Icon Box",
"settings": [
  {
    "type": "text",
    "id": "heading",
    "default":"Title",
    "label": "Heading"
  },
  {
    "type": "image_picker",
    "id": "image",
    "label": "Image",
    "info": "Image"
  }
],
"blocks": [
  {
    "name": "Icon Box",
    "type": "icon_box",
    "settings": [
      {
        "type": "image_picker",
        "id": "icon_image",
        "label": "Icon Image",
        "info": "Icon"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default":"Sub Title"
      },
      {
        "type": "textarea",
        "id": "content",
        "default":"Content",
        "label": "Content"
      }
    ]
  }
],
"presets": [
  {
    "name": "Image With Text and icons"
  }
]
}
{% endschema %}

